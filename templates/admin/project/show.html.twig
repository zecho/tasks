{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ project.status.value }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ project.start ? project.start|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ project.end ? project.end|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ project.client }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ project.company }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_project_index') }}">back to list</a>

    <a href="{{ path('admin_project_edit', {'id': project.id}) }}">edit</a>

    {{ include('admin/project/_delete_form.html.twig') }}
{% endblock %}
